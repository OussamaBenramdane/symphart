

{% extends 'base.html.twig' %}
{% block title %} Symphart Articles {% endblock%}

{% block body %}
    <h1> Articles </h1>
    {% if articles %}
        <table id="articles" class="table table-striped" >
            <thead>
            <tr>
                <th>Articles Title</th>
                <th>Actions</th>

            </tr>
            </thead>
            <tbody>
                {% for article in articles  %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td><a href="/article/{{ article.id }}" class="btn btn-dark btn-sm">Show</a></td>
                    <td><a href="#" class="btn btn-danger delete-article btn-sm" data-id="{{article.id}}">Delete</a></td>
                </tr>
                {% endfor %}
            </tbody>

        </table>
    {% else %}
        <p>No articles found</p>
    {% endif %}
{% endblock %}
{% block javascripts %}
    <script src="/js/main.js">
    </script>
{% endblock %}
