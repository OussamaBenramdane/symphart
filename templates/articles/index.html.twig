

{% extends 'base.html.twig' %}
{% block title %} Symphart Articles {% endblock%}

{% block body %}
    <h1> Articles </h1>
    {% if articles %}
        <table class="table-striped">
            <thead>
            <tr>
                <th>Articles Title</th>
                <th>Actions</th>

            </tr>
            </thead>
            <tbody>
                {% for article in articles  %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td><a href="/article/{{ article.id }}" class="btn btn-dark btn-sm">Show</a></td>
                </tr>
                {% endfor %}
            </tbody>

        </table>
    {% else %}
        <p>No articles found</p>
    {% endif %}
{% endblock %}
